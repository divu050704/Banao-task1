{
    "manifest_version": 3,
    "name": "Banao Task 2",
    "version": "0.2",
    "description": "Retrieves LinkedIn profile information and stores it as a MongoDB model - Divyanshu Sharma",
    "permissions": [
        "activeTab",
        "scripting",
        "webNavigation",
        "scripting"
    ],
    "host_permissions": [
        "https://www.linkedin.com/*"
    ],
    "action": {
        "default_popup": "popup.html"
    },
    "content_scripts": [
        {
            "matches": [
                "https://www.linkedin.com/*"
            ],
            "js": [
                "JS/content.js"
            ],
            "run_at": "document_start"
        }
    ]
}